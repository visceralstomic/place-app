<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    
    <header class="header">
        <div class="menu">
            <div class="wrapper">
                <nav class="nav">
                    <h1 class="header-logo">
                        <a href="/">Places App</a>
                    </h1>
                    <div class="user-hello">
                        <div class="username">
                            Hello, <%= user.username %>
                        </div>
                        <form action="/auth/logout" method="post">
                            <button type="submit" class="logout-btn">Logout</button>
                        </form>
                    </div>
                </nav>
            </div>
        </div>
    </header>

    <div class="places-form-container">
        <form class="form place-form" method="post">
            <h2 class="form-title">Create place</h2>
            <div class="form-control">
                <label for="place-name-input">Name</label><br>
                <input type="text" name="name"  id="place-name-input" >
                <div class="form-field-error place-name-error">

                </div>
            </div>
            <div class="form-control">
                <label for="place-locations-input">Location</label><br>
                <input type="text" name="locations" id="place-locations-input" >
                <div class="form-field-error place-locations-error">
                    
                </div>
            </div>

            <div class="form-control">
                <label for="place-rating-input">Rating</label><br>
                <div class="rating-box">
                    <img src="/images/svg/star-regular.svg" alt="" class="rating-star star-ico">
                    <img src="/images/svg/star-regular.svg" alt="" class="rating-star star-ico">
                    <img src="/images/svg/star-regular.svg" alt="" class="rating-star star-ico">
                    <img src="/images/svg/star-regular.svg" alt="" class="rating-star star-ico">
                    <img src="/images/svg/star-regular.svg" alt="" class="rating-star star-ico">
                    
                </div>
            </div>
            <div class="form-control">
                <label for="place-picture-input" class="picture-label">Load image</label>
                <span id="file-selected"></span>
                <input type="file" name="picture" id="place-picture-input" accept="image/*" >
                <div class="form-field-error place-picture-error">
                    
                </div>
            </div>

            <div class="form-control">
                <label for="place-description-input">description</label><br>
                <textarea name="description" id="place-description-input" ></textarea>
                <div class="form-field-error place-description-error">
                    
                </div>
            </div>

            <div class="">

            </div>

            <button class="form-btn" type="submit">Create</button>
        </form>
    </div>

    <div class="main">
        <div class="wrapper">
            <div class="index-container">
                <div class="places-list">

                    <% if (places.length === 0 ) { %>
                        <div class="places-empty">
                            List of places is empty
                        </div>
                    <% } else { %>
                        <% places.forEach( place => { %>
                            <div class="place-item">
                                <div class="place-header">
                                    <div class="place-info">
                                        <div class="place-name">
                                            Name: <span><%= place.name %></span>
                                        </div>
                                        <div class="place-location">
                                            Location: <span><%= place.location %></span>
                                        </div>
                                        <div class="rating">
                                            Rating: 
                                            <% for(let i = 1; i <= 5; i++) { %>
                                                <% if (i <= place.rating) { %>
                                                     <img src="/images/svg/star-solid.svg" alt="" class="star-ico">       
                                                <%} else { %>
                                                    <img src="/images/svg/star-regular.svg" alt="" class="star-ico">
                                                <%} %>
                                            <%} %>   
                                        </div>
                                    </div>
        
                                    <div class="place-picture">
                                        <img src="/images/<%= place.picture %>" alt="">
                                    </div>
                                </div>
                                 <div class="place-footer">
                                    <p>
                                        <%= place.description %>
        
                                    </p>
                                </div>
                            </div>
                        <% }) %>
                    <% } %>

                   
                    
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script src="/js/index.js"></script>


    
</body>
</html>