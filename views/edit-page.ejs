<%- include('includes/header') %>
    <main class="main">
        <div class="wrapper">
            
            <div class="edit-container">
                <form class="form" id="edit-place-form" method="post" enctype="multipart/form-data"
                action="/places/<%=place._id %>/edit">
                    <h2 class="form-title">Edit place</h2>
                    <div class="form-control">
                        <label for="edit-place-name-input">Name </label><br>
                        <input type="text" name="name" value="<%= place.name %>" id="edit-place-name-input" >
                        <div class="form-field-error edit-place-name-error">
        
                        </div>
                    </div>
                    <div class="form-control">
                        <label for="edit-place-locations-input">Location</label><br>
                        <input type="text" name="location" value="<%= place.location %>" id="edit-place-locations-input" >
                        <div class="form-field-error edit-place-locations-error">
                            
                        </div>
                    </div>
        
                    <div class="form-control">
                        <label for="edit-place-rating-input">Rating</label><br>
                        <div class="form-star">
                            <div class="star">
                                      <label class="rating-label" id="rating-label">
                                          ★
                                          <input type="radio" name="note" value="1" id="aze">
                                        </label>
                                     
                                      <label class="rating-label" id="rating-label">
                                          ★
                                          <input type="radio" name="note" value="2">
                                        </label>
                                      <label class="rating-label" id="rating-label">
                                          ★
                                          <input type="radio" name="note" value="3">
                                        </label>
                                      <label class="rating-label" id="rating-label">
                                          ★
                                          <input type="radio" name="note" value="4">
                                        </label>
                                      <label class="rating-label" id="rating-label">
                                          ★
                                          <input type="radio" name="note" value="5">
                                        </label>
                                    </div>
                        </div>
                        <input type="text" value="<%= place.rating %>" name="rating" id="place-old-rating" hidden>
                    </div>
                    <div class="form-control">
                        <label for="edit-place-picture-input" class="picture-label">Load image</label>
                        <span id="file-selected"><%= place.picture %></span>
                        <input type="file" name="picture" value="/images/<%= place.picture %>"
                               id="edit-place-picture-input" class="place-picture-input" accept="image/*" >
                        <div class="form-field-error edit-place-picture-error">
                            
                        </div>
                    </div>
    
        
                    <div class="form-control">
                        <label for="edit-place-description-input">description</label><br>
                        <textarea name="description" id="edit-place-description-input"
                                  class="place-description-input" ><%= place.description %>
                                </textarea>
                        <div class="form-field-error edit-place-description-error">
                            
                        </div>
                    </div>
        
                    <div class="<%= editPlaceError.length ? 'form-error' : '' %>" id="box-msg">
                        <%= editPlaceError %>
                    </div>

        
                   
                </form>
                <div class="edit-btns">
                    <button class="form-btn" form="edit-place-form" type="submit">Edit</button>
                    <form action="/places/<%= place._id %>/delete" method="POST" class="del-form">
                        <button class="form-btn del-btn" type="submit">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </main>

    <script src="/js/utils.js"></script>
    <script src="/js/edit-page.js"></script>
    
</body>
</html> 